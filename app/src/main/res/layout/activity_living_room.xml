<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounds"
    tools:context=".LivingRoom">






    <android.support.v7.widget.CardView
        android:id="@+id/welcome"

        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"

        android:clickable="true"

        app:cardCornerRadius="5dp"
        android:alpha="@android:integer/config_longAnimTime"
        app:cardBackgroundColor="#FF9800"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Welcome Home,Jim"
                android:textStyle="bold"
                android:textColor="#795548"
                android:layout_margin="9dp"
                android:typeface="monospace"
                android:textSize="25dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/container"
        android:layout_below="@id/welcome"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"

        >

    <android.support.v7.widget.CardView
        android:id="@+id/lamp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#4DD0E1"
        >


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_margin="9dp"
            android:layout_height="wrap_content"
            android:text="on"
            android:textColor="#222"
            android:textStyle="bold"
            android:textOff="off"
            android:background="000"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/livingroomsmall"

            />

            <TextView
                android:id="@+id/textView293"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Main light"
                android:textStyle="bold"

                android:textColor="#795548"
                android:layout_margin="9dp"
                android:typeface="sans"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView4"
                />

        </RelativeLayout>




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/router"
        android:layout_width="180dp"
        android:layout_margin="10dp"
        android:layout_height="180dp"
        android:layout_toRightOf="@id/lamp"

        >

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch" />
    </android.support.v7.widget.CardView>

   </RelativeLayout>

</RelativeLayout>