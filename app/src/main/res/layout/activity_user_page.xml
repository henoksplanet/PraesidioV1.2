<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPage"
    android:background="@drawable/backgrounds"

    >


    <android.support.v7.widget.CardView
        android:id="@+id/welcome"

        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"

        android:clickable="true"

        app:cardCornerRadius="10dp"
        android:alpha="@android:integer/config_longAnimTime"
        app:cardBackgroundColor="#FF9800"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">






            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Welcome Home,Jim"
                android:textStyle="bold"
                android:textColor="#795548"
                android:layout_margin="9dp"
                android:typeface="monospace"
                android:textSize="25dp" />




        </RelativeLayout>
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"

        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_margin="4dp"

        android:clickable="true"
      android:layout_below="@id/welcome"
        app:cardCornerRadius="15dp"
        android:alpha="@android:integer/config_longAnimTime"
        app:cardBackgroundColor="#8BC34A"
        app:cardElevation="5dp"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">




            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/livingicon"

                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Living room"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="9dp"
                android:typeface="monospace"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:text="5 devices Connected"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="9dp"
                android:layout_toLeftOf="@id/imageView2"

                android:typeface="monospace"
                android:textSize="15dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_margin="4dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/cardView2"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="5dp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="551dp"
        android:clickable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/bedroomicon"

                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Bedroom-1"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="9dp"
                android:typeface="monospace"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:text="3 devices Connected"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="9dp"
                android:layout_toLeftOf="@id/imageView3"

                android:typeface="monospace"
                android:textSize="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_margin="4dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/cardView3"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#607D8B"
        app:cardElevation="5dp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="551dp"
        android:clickable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/bedroom2"

                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Bedroom-2"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="9dp"
                android:typeface="monospace"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:text="4 devices Connected"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="9dp"
                android:layout_toLeftOf="@id/imageView6"

                android:typeface="monospace"
                android:textSize="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/logout"

        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"

        android:clickable="true"
android:layout_below="@id/cardView4"
        app:cardCornerRadius="10dp"
        android:alpha="@android:integer/config_longAnimTime"
        app:cardBackgroundColor="#332"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">






            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="logout"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#cdcdcd"
                android:layout_margin="9dp"
                android:typeface="monospace"
                android:textSize="18dp"
                android:drawableLeft="@drawable/logout"
                />




        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>


